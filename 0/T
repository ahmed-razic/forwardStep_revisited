FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * /
dimensions      [0 0 0 1 0 0 0];

internalField   uniform 1;

boundaryField
{
    inlet
    {
        type        fixedValue;
        value       uniform 1;
    }

    outlet
    {   
        type        zeroGradient;
    }

    top
    {
        type        symmetryPlane;
    }

    bottom
    {
        type        symmetryPlane;
    }

    obstacle
    {
        type        zeroGradient;
    }

    frontAndBack
    {
        type        empty;
    }
}

